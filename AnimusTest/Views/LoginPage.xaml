<Window x:Class="AnimusTest.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authorize" Height="300" Width="400"
        Background="#404040">
	<Grid Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Margin="0,20,0,10" Orientation="Horizontal">
			<Label Content="Username:" Width="70" Style="{StaticResource LabelOnDark}"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Style="{StaticResource InputDark}"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Margin="0,0,0,10" Orientation="Horizontal">
            <Label Content="Password:" Width="70" Style="{StaticResource LabelOnDark}"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Style="{StaticResource PasswordInputDark}"/>
		</StackPanel>

		<Button Grid.Row="2" Content="Log In" Width="100" Click="LoginButton_Click"
                 Style="{StaticResource ActionButton}"/>
	</Grid>
</Window>
