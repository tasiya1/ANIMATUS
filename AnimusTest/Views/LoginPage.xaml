<Window x:Class="AnimusTest.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Логін" Height="300" Width="400">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Margin="0,20,0,10">
			<Label Content="Логін"/>
            <TextBox x:Name="UsernameTextBox" Width="200"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Margin="0,0,0,10">
			<Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200"/>
		</StackPanel>

		<Button Grid.Row="2" Content="Увійти" Width="100" Click="LoginButton_Click"/>
	</Grid>
</Window>
