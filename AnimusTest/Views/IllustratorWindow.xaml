<Window x:Class="AnimusTest.Views.IllustratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="Illustration Editor" Height="800" Width="1500" WindowState="Maximized">
    <DockPanel LastChildFill="True" Background="DarkSlateGray">

        <!-- Верхня панель (МЕНЮ) -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem IsEnabled="True" Header="New"/>
                <MenuItem IsEnabled="True" Header="Open" />
                <MenuItem IsEnabled="True" Header="Save"/>
                <Separator />
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Command="Cut" />
                <MenuItem Command="Copy" />
                <MenuItem Command="Paste" />
            </MenuItem>
        </Menu>

        <!-- Ліва панель (ІНСТРУМЕНТИ) -->
        <StackPanel DockPanel.Dock="Left" Background="DarkGray" Width="60">
            <Button Content="✏" Width="40" Height="40" />
            <Button Content="🧹" Width="40" Height="40" />
            <Button Content="↶" Width="40" Height="40" />
            <Button Content="↷" Width="40" Height="40" />
        </StackPanel>

        <!-- Права панель (ШАРИ) -->
        <StackPanel DockPanel.Dock="Right" Background="LightGray" Width="200">
            <TextBlock Text="LAYERS" Padding="5"/>
            <ListBox Name="LayerList" Height="350" Background="Gray"/>
            <ToolBar></ToolBar>
        </StackPanel>

        <!-- КАНВАС -->
        <Grid Margin="20">
            <skia:SKElement x:Name="SkiaCanvas" Width="1500" Height="820"
                        PaintSurface="SkiaCanvas_PaintSurface" Cursor="Cross"
                        MouseMove="SkiaCanvas_MouseMove"
                        MouseDown="SkiaCanvas_MouseDown"
                        MouseUp="SkiaCanvas_MouseUp"/>
        </Grid>
        
    </DockPanel>
</Window>
