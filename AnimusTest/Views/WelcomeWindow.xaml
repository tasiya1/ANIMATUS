<Window x:Class="AnimusTest.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animation Editor" Height="800" Width="1500" 
        WindowState="Maximized" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Media/bg_faded.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome back!" FontSize="48" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" TextAlignment="Center"/>

            <Button Background="White" Margin="5" Content="New Project" Width="250" Height="50" FontSize="18" Click="NewProject_Click"/>
            <Button Background="White" Margin="5" Content="Open Existing" Width="250" Height="50" FontSize="18" Click="OpenProject_Click"/>
            <Button Background="White" Margin="5" Content="Create Illustration" Width="250" Height="50" FontSize="18" Click="NewIllustration_Click"/>
            <Button Background="White" Margin="5" Content="Exit" Width="250" Height="50" FontSize="18" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
